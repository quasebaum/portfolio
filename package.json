{
	"name": "samuelmeuli.com",
	"description": "My personal website",
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/samuelmeuli.com",
	"homepage": "https://samuelmeuli.com",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "hugo server --buildDrafts --buildFuture --port 3000",
		"build": "hugo --buildFuture --minify",
		"format": "prettier --write",
		"lint": "stylelint --fix --max-warnings 0 --syntax scss"
	},
	"dependencies": {},
	"devDependencies": {
		"@samuelmeuli/stylelint-config": "^1.0.2",
		"husky": "^3.0.5",
		"lint-staged": "^9.2.5",
		"prettier": "1.18.2",
		"stylelint": "^10.1.0"
	},
	"stylelint": {
		"extends": "@samuelmeuli/stylelint-config"
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.scss": [
			"yarn format",
			"yarn lint",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
