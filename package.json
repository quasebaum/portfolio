{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "My personal website",
	"private": true,
	"author": "Samuel Meuli <me@samuelmeuli.com>",
	"repository": "github:samuelmeuli/portfolio",
	"homepage": "https://samuelmeuli.com",
	"license": "MIT",
	"scripts": {
		"start": "npm-run-all build --parallel start:*",
		"start:sass": "node-sass styles --output public --recursive --source-map true --watch",
		"start:serve": "serve public --listen 3000",
		"build": "run-s build:*",
		"build:cleanup": "rm -f public/styles.*",
		"build:sass": "node-sass styles --output public --output-style compressed"
	},
	"devDependencies": {
		"node-sass": "^4.9.0",
		"npm-run-all": "^4.1.3",
		"serve": "^10.1.1"
	},
	"dependencies": {
		"minireset.css": "0.0.3"
	}
}
