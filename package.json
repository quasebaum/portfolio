{
	"name": "samuelmeuli.com",
	"description": "My personal website",
	"author": "Samuel Meuli <me@samuelmeuli.com>",
	"repository": "github:samuelmeuli/samuelmeuli.com",
	"homepage": "https://samuelmeuli.com",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "hugo server --buildDrafts --port 3000",
		"build": "run-s build:*",
		"build:hugo": "hugo --minify",
		"build:minify": "html-minifier --file-ext html --input-dir public --output-dir public --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true",
		"format": "prettier --write",
		"lint": "stylelint --fix --syntax scss src/**/*.scss"
	},
	"devDependencies": {
		"@samuelmeuli/stylelint-config": "~1.0.0",
		"html-minifier": "^3.5.21",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"stylelint": "^9.10.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.scss": [
			"yarn format",
			"yarn lint",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"dependencies": {}
}
